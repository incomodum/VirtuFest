{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 150
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"trailingCommas": "none",
			"lineWidth": 150,
			"jsxQuoteStyle": "double"
		}
	},
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noUselessFragments": "warn"
			},
			"correctness": {
				"noUnusedVariables": "warn",
				"noUnusedImports": "warn"
			},
			"a11y": {
				"useSemanticElements": "off",
				"useKeyWithClickEvents": "off"
			},
			"nursery": {
				"useSortedClasses": "warn"
			}
		}
	},
	"files": {
		"include": ["*.ts", "*.tsx"],
		"ignore": [
			"./*.d.ts",
			"./node-modules",
			"./.vscode",
			"./.DS_Store",
			"./*.lock",
			"./.gitattributes",
			"*.md",
			"*.ttf",
			"*.png",
			"*.yml",
			".next"
		]
	}
}
